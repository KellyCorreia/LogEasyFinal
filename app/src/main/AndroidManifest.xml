<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kelly.logeasyfinal" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/blueicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".ResultActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".LessonActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".QuizActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".HintActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Create_User"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Choose_Player"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".LogEasy"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LevelsActivity"
            android:label="@string/title_activity_levels" >
        </activity>
        <activity
            android:name=".Scoreboard_Activity"
            android:label="@string/title_activity_scoreboard_" >
        </activity>
    </application>

</manifest>
