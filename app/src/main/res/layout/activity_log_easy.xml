<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kelly.logeasyfinal.LogEasy"
    android:id="@+id/LayoutBase"
    android:background="#ffffe490">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal|top|center_vertical|fill_vertical|center_horizontal"
        android:weightSum="1"
        android:background="#ffffe48f"
        android:layout_marginTop="40dp"
        android:layout_gravity="top"
        android:id="@+id/LayoutLogo"
        android:focusable="false">

        <ImageView
            android:layout_width="339dp"
            android:layout_height="172dp"
            android:id="@+id/ImvLogo"
            android:focusable="false"
            android:src="@drawable/logeasylogo"
            android:layout_gravity="top|center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="fill_horizontal|bottom|fill_vertical"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:id="@+id/LayoutButtons">

        <ImageButton
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:id="@+id/btnStart"
            android:background="@drawable/buttonazul"
            android:layout_gravity="top|center_horizontal" />

        <ImageButton
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:id="@+id/btnInfo"
            android:background="@drawable/buttongreen"
            android:layout_marginTop="20dp"
            android:layout_gravity="bottom|center_horizontal" />
    </LinearLayout>

</RelativeLayout>
